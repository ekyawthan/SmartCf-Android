<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#8ff38b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text= "CF Smart"
                android:textColor = "#ff7a2c"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonSurveyXml"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

        </android.support.v7.widget.Toolbar>


    </LinearLayout>
    <Button

        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonSurveyXml"
        android:background="#3F51B5"
        android:textColor="#fff"
        android:text="Begin Questionnaire"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />





    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Thank You for Completing This Questionnaire"
        android:id="@+id/textViewSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSurveyXml"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <Button
        android:background="#80909090"
        android:textColor="#db0a0401"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Alarm Time"
        android:textAllCaps="false"
        android:id="@+id/settingButton"
        android:layout_above="@+id/logOutButton"
      />
    <Button
        android:background="#ffffff"
        android:textColor="#dbc54e11"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        android:id="@+id/logOutButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
